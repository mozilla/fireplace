@media $at-least-desktop {
    .category-header {
        display: none;
    }
    .category-header-desktop {
        display: block;

        .cur-cat {
            &:hover {
                cursor: default;
            }
        }
    }
    [data-page-type~=leaf] {
        .column-a {
            float: left;
            width: 320px;

            .fanchor + .desc {
                margin: 20px 0;
                padding: 0;
            }
        }
        .column-b {
            float: right;
            padding: 0;
            width: 360px;
        }
        .feed-landing.shelf-landing .feed-item {
            right: inherit;
        }
        .feed .mkt-tile {
            .info {
                width: 260px;
            }
            .elliflow {
                max-width: 180px;
            }
        }
    }
    [data-page-type~=newpop] {
        .feed {
            max-width: $desktop-content;

            .app-list {
                max-width: $desktop-content;

                li {
                    float: left;
                    margin-right: 20px;
                    width: 335px;

                    &.mini-app {
                        background-color: #fff;
                        border-radius: 5px;
                        height: 80px;
                        padding: 10px;
                    }
                    &:nth-child(2n) {
                        margin-right: 0;
                    }
                    &.loadmore {
                        clear: both;
                        width: $desktop-content;
                    }
                }
            }
            .multi-app-tile.mkt-tile {
                background-color: transparent;
                box-shadow: none;
                max-width: $desktop-content;
                padding: 0;

                .app-list {
                    width: $desktop-content;

                    .fragment-error {
                        background-color: transparent;
                        display: inline-block;
                        padding: 20px;
                    }
                }
                > .icon {
                    display: none;
                }
                > .info {
                    height: 30px;
                    margin-left: 0;
                    width: 100%;

                    h1 {
                        font-size: 24px;
                        line-height: 24px;
                    }
                }
            }
            .placeholder {
                clear: both;
            }
        }
    }
}
