/*
    Styles for the global site header.
*/
@import 'lib';

.hamburger {
    order: 0;
}
.wordmark {
    order: 1;
}
mkt-header-nav {
    order: 2;
}
.header--search-toggle {
    order: 3;

    +media--wide-tablet() {
        margin-right: 60px;
    }
}
.header--settings-toggle {
    order: 4;
}
.mkt-header--register {
    order: 5;
}
.mkt-header--login {
    order: 6;
}

// Add header's height back as padding. Overridden when header not fixed.
body {
    padding-top: $header-height;
}

// We hide the recommendations tab by default and enable it via JS if user is
// logged in and opted in to recommendations.
[data-mkt-nav--item~="recommended"],
[data-mkt-header-nav--item~="recommended"] {
    display: none;
}
.show-recommendations [data-mkt-nav--item="recommended"],
.show-recommendations [data-mkt-header-nav--item="recommended"] {
    display: inline;
}

.header-button.back.mkt-header--back {
    width: 38px;
}

#site-header {
    align-items: center;
    background: $color--header--background;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    min-height: 60px;
    padding: 0 5px;
    position: relative;
    z-index: $zindex--header;

    +rtl() {
        // Keep the back and menu button on the left when RTL.
        flex-direction: row-reverse;
    }

    h1 {
        align-items: center;
        display: flex;
        height: 50px;
    }
    // Marketplace logo.
    .wordmark {
        image-replacement('../img/nav/rocket-color.svg', 26px, 40px);
    }
    // Project name, appearing to the right of the Marketplace logo.
    .site-name {
        border-left: 1px solid $color--header--separator;
        color: $color--header--site-name;
        display: none;
        font-size: 16px;
        font-weight: 300;
        margin-left: 8px;
        padding: 4px 0 4px 12px;
        position: relative;
        top: 1px;  // Aligns baseline the wordmark's baseline;
    }
    // Hamburger icon that toggles the menu visibility at smaller screen sizes.
    .hamburger {
        image-replacement('../img/nav/menu.svg', 40px, 40px);
        background-position: 0 0;
        background-size: 40px 140px;
        appearance: none;
        border: 0;
        cursor: pointer;
        display: inline-block;
        left: 5px;
        position: relative;
    }
    +media--wide-tablet() {
        min-height: 60px;
        padding: 0 40px;

        .hamburger {
            display: none;
        }
    }
}

// Banners should cover the header children when above the header.
body > .banners mkt-banner {
    z-index: 70;
}

// Usable on any header.
.header {
    background: $white;
    display: flex;
    height: $header-height;
    max-height: $header-height;
    position: relative;
    width: 100%;

    > * {
        align-self: center;
    }
}

// # for the primary site header *only*.
// If you need to generalize a style in here, move it.
.site-header {
    display: block;
    position: fixed;
    text-align: center;
    top: 0;

    &:before {
        display: none;
    }
    .site {
        height: $header-height;
        margin: 0 5px;
        width: 200px;

        a {
            display: block;
            height: 47px;
            hidetext();
            width: 100%;
        }
    }
    .wordmark {
        background: url(../img/pretty/marketplace_logo.png) 0 50% no-repeat;
        background-size: auto 37px;
        display: block;
        height: 47px;
    }
    .header-button {
        display: none;
    }
}

.close {
    background: url(../img/pretty/close.svg) 50% no-repeat;
    background-size: 18px auto;
    height: 34px;
    hidetext();
    position: absolute;
    right: 0;
    top: 0;
    width: 40px;

    &:active {
        background: url(../img/pretty/close_active.svg) 50% no-repeat;
    }
}

// Buttons that appear in headers.
.header-button {
    color: $castle-skull-gray;
    display: block;
    height: $header-height;
    line-height: $header-height;
    text-align: center;
    width: $header-height;  // $header-height so it's square.

    // header buttons with icons
    &.icon {
        position: relative;
        hidetext();
        &:after {
            background-repeat: no-repeat;
            content: "";
            display: block;
        }
    }
    &.back {
        hidetext();
        background: url(../img/pretty/back_arrow.svg) center no-repeat;
        background-size: 12px 24px;
        margin-right: 2px;
        width: 50px;

        &:hover {
            background-image: url(../img/pretty/back_arrow_active.svg);
        }
    }
}

.persona-loaded .header-button.persona {
    cursor: pointer;
}

.header-button.persona {
    width: auto;
}

.subheader {
    h1,
    a {
        line-height: 37px;
        padding: 10px;
    }
}

.secondary-header,
.featured-header {
    position: relative;

    h2, h3 {
        color: $greyscale-black;
        font-weight: 300;
        margin-bottom: -3px;
        max-width: calc(unquote('100% - 75px'));
        min-width: 70%;
        padding-bottom: 3px;
        position: absolute;
    }
}

.category.featured {
    position: relative;
}

.secondary-header {
    background: $salt-flat-white;
    border-top: 1px solid $seavan-salt-white;
    margin-top: -1px;
    z-index: 19;

    &:before {
        // Because box-shadows can go suck it.
        bottom: -2px;
        content: "";
        display: block;
        background-image: linear-gradient(to top, rgba(15,15,15,0) 0%, rgba(15,15,15,.3) 100%);
        height: 2px;
        position: absolute;
        width: 100%;
        z-index: 1;
    }
    .subtitle {
        color: $earl-gray;
        font-size: 20px;
        font-weight: 300;

        &:before {
            content: "\00a0/\00a0";
            color: darken($seavan-salt-white, 4%);
            font-size: 30px;
        }
    }
}

.featured-header {
    padding: 5px 10px 25px;

    h3 {
        font-size: 20px;
        line-height: 20px;
    }
}

.featured .featured-header {
    padding-top: 15px;
}

.site-header .account-links,  // .site-header for specificity
.active .account-links {
    display: none;
}

[data-page-type~=search],
[data-page-type~=leaf] {
    .back, .expand {
        display: block;
    }
    .site {
        display: none;
    }
}

@media $narrower-than-desktop {
    .secondary-header {
        height: 40px;

        h2 {
            font-size: 15px;
            line-height: 40px;
            margin: 0 10px;
        }
        .subtitle, .subtitle:before {
            font-size: 15px;
        }
        .subtitle {
            font-weight: 400;
        }
    }
    .featured .featured-header {
        padding-bottom: 20px;
    }
}

@media (min-width: 710px) {
    [data-page-type] main:before {
        display: none;
    }
}

@media $base-tablet {
    .subheader {
        h1,
        a {
            line-height: 1;
            margin: 0 0 30px;
            padding: 40px 10px 0;
        }
    }
    .secondary-header {
        background: none;
        border: 0;
        height: $header-height;
        max-height: $header-height;
        padding: 0;
        position: relative;

        &:before {
            display: none;
        }
        h2 {
            margin: 0;
            padding: 0;
        }
    }
    header.secondary-header {
        margin: 10px auto 20px;
        width: $max-site-width;

        h2 {
            font-size: 30px;
        }
    }
    .featured-header {
        padding: 15px 15px 5px;
    }

    body {
      padding-top: 0;
    }
    .site-header {
        height: 60px;
        max-height: 60px;
        position: relative;

        > nav {
            height: 60px;
            margin: 0 auto;
            max-width: $max-site-width;
            width: 95%;
        }
        .site {
            margin: 0;
            width: 232px;
        }
        .site, .site a, .wordmark {
            height: 60px;
        }
        .wordmark {
            background-position: -5px 50%;
            background-size: auto 46px;
            max-width: 232px;
            width: 232px;
        }
        .act-tray {
            display: none;
        }
    }
    .logged-in .site-header {
        .act-tray {
            display: block;
        }
        .persona {
            display: none;
        }
    }
    .active .account-links {
        display: block;
    }
    // How does the header look for the various page "types"?
    [data-page-type~=search],
    [data-page-type~=leaf] {
        .site {
            display: block;
        }
        .header--back {
            display: none;
        }
    }
    .desktop .wordmark {
        background: url(../img/pretty/marketplace-beta-logo.png) no-repeat 0 50% / 231px auto;
    }
}

@media $wide-tablet {
    [data-page-type~=leaf] .mkt-header--back {
        display: none;
    }
}

@media $retina-tablet {
    .site-header .wordmark {
        background: url(../img/pretty/marketplace-beta-logo2X.png) no-repeat 0 50% / 200px auto;
    }
}
