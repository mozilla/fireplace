/*
    Miscellaneous base and layout styles for the app detail page.
*/
@import '../lib';

[data-page-type~="detail"] .subheader {
    display: none;
}

.detail .support > div {
    // Necessary to not clobber desktop L+R.
    padding-bottom: 24px;
    padding-top: 24px;
}

.detail {
    background: $page-background;
    border-radius: 0;
    margin: 10px;

    section:not(.app-header) h3 {
        _h3();
        margin-bottom: 15px;
    }
}

.collapsed {
    display: none;
}

.truncated:after {
    // Fade away at the end of truncated elements.
    bottom: 0;
    content: '';
    gradientTop(unquote('rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%'));
    height: 6.5em;
    left: 0;
    pointer-events: none;
    position: absolute;
    width: 100%;
    z-index: 10;
}

// Stats not mobile-optimized. Hide button on non-desktop.
// TODO: Remove once bug 924519 is resolved.
.statistics {
    display: none;
}

.app-report-abuse .button {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    text-align: center;
}

.detail-left-side {
    margin-bottom: 30px;
}

@media $base-tablet {
    [data-page-type~="detail"] .detail > .placeholder > .loading {
        // Fix offset caused by not all elements being loaded.
        margin-top: 82px;
    }
    .detail-flex-wrap {
        display-flex();
        justify-content(center);
        position: relative;
        width: 100%;
    }
    .detail-left-side {
        width: unquote('calc(100% - 300px)');
        margin-bottom: 0;
        margin-right: 30px;
    }
    .detail-right-side {
        width: $mobile-content-width;
    }
    .truncated-wrapper + a.view-all-tab {
        display: none;
    }
    .app-report-abuse .button {
        width: $mobile-content-width;
    }
}

@media $base-desktop {
    .truncate-toggle {
        display: none;
    }
    .detail {
        margin: 0 auto;
        overflow: hidden;
    }
    .secondary-header .leading {
        font-size: 24px;
        gradient-two-color(#fff, #e1e1e1);
        line-height: 24px;
        max-width: 100%;
        padding: 15px;
        position: static;
    }
    .statistics {
        display: block;
    }
}
