@import 'lib';

.infobox.blurbs {
    border-top: 0;
}

.detail .support > div {
    // Necessary to not clobber desktop L+R
    padding-bottom: 24px;
    padding-top: 24px;
}

.detail {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 1px 1px $cement-gray;
    margin: 10px;
    h3 {
        font-size: 15px;
        font-weight: 500;
        line-height: 18px;
    }
}

.blurbs {
    clear: both;
    color: $dark-gray;
    line-height: 22px;
    > div {
        padding: 24px 10px;
    }
    .description:only-child {
        padding-bottom: 0;
    }
    .description + div > {
        h3:first-child {
            padding-top: 0;
        }
        :last-child {
            padding-bottom: 0;
        }
    }
    blockquote {
        background: $faint-gray;
        border-left: 2px solid $light-gray;
        color: $medium-gray;
        margin: 0;
        padding: 5px 10px;
    }
    .description-wrapper {
        padding: 0;

        &.truncated {
            max-height: 16.5em;
            overflow: hidden;
            position: relative;

            &:after {
                bottom: 0;
                content: '';
                gradientTop(unquote('rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%'));
                height: 6.5em;
                left: 0;
                pointer-events: none;
                position: absolute;
                width: 100%;
                z-index: 10;
            }
        }
    }
}

.show-toggle {
    display: block;
    float: right;
    font-weight: bold;
    padding: 10px;
    text-transform: lowercase;
    &:before {
        content: "(";
        font-weight: 200;
    }
    &:after {
        content: ")";
        font-weight: 200;
    }
}

.collapsed {
    display: none;
}

.content-ratings-wrapper {
    border-top: 1px solid $cloud-gray;
    h3 {
        padding-bottom: 24px;
    }
}

.content-ratings .content-rating {
    color: $text;
    display: table;
    margin-bottom: 12px;

    .icon {
        background-repeat: no-repeat;
        border-radius: 5px;
        height: 64px;
        margin-right: 15px;
        text-align: center;
        vertical-align: middle;
        width: 64px;
    }
    .icon-body-esrb {
        height: 90px;
        width: 58px;

        &.icon-age-0 {
            background-image: url('../img/icons/ratings/esrb_e.png');
        }
        &.icon-age-10 {
            background-image: url('../img/icons/ratings/esrb_e10.png');
        }
        &.icon-age-13 {
            background-image: url('../img/icons/ratings/esrb_t.png');
        }
        &.icon-age-17 {
            background-image: url('../img/icons/ratings/esrb_m.png');
        }
        &.icon-age-18 {
            background-image: url('../img/icons/ratings/esrb_ao.png');
        }
    }
    .icon-body-generic, .icon-body-classind {
        background: $black;
        color: $white;
        float: left;
        font: 600 32px/64px $open-stack;

        .icon-content {
            display: inline;
        }
        &.icon-age-L,
        &.icon-age-0 {
            background: $box-green;
        }
        &.icon-age-10 {
            background: $box-blue;
        }
        &.icon-age-12,
        &.icon-age-13 {
            background: $box-yellow;
        }
        &.icon-age-14 {
            background: $box-orange;
        }
        &.icon-age-16 {
            background: $box-red;
        }
        &.icon-age-18 {
            background: #000;
        }
    }
    .icon-body-usk {
        border-radius: 8px;
        height: 68px;
        width: 68px;

        &.icon-age-0 {
            background-image: url('../img/icons/ratings/USK_0.png');
        }
        &.icon-age-6 {
            background-image: url('../img/icons/ratings/USK_6.png');
        }
        &.icon-age-12 {
            background-image: url('../img/icons/ratings/USK_12.png');
        }
        &.icon-age-16 {
            background-image: url('../img/icons/ratings/USK_16.png');
        }
        &.icon-age-18 {
            background-image: url('../img/icons/ratings/USK_18.png');
        }
    }
    .icon-body-pegi {
        border-radius: 1px;
        height: 73px;
        width: 60px;

        &.icon-age-3 {
            background-image: url('../img/icons/ratings/pegi_3.png');
        }
        &.icon-age-7 {
            background-image: url('../img/icons/ratings/pegi_7.png');
        }
        &.icon-age-12 {
            background-image: url('../img/icons/ratings/pegi_12.png');
        }
        &.icon-age-16 {
            background-image: url('../img/icons/ratings/pegi_16.png');
        }
        &.icon-age-18 {
            background-image: url('../img/icons/ratings/pegi_18.png');
        }
    }
    .description {
        display: table-cell;
        font-weight: 400;
        margin: 0;
        vertical-align: middle;
        width: 100%;
    }
}

.actions {
    > div {
        float: left;
        overflow: hidden;
        width: 100%;
    }
    .button {
        position: relative;
        z-index: 1;
        width: 100%;
    }
}

.support {
    border-radius: 0 0 10px 10px;
    ul {
        margin: 0;
        list-style: none;
        padding: 0;
        a {
            display: inline-block;
        }
    }
    li {
        float: left;
        margin-bottom: 10px;
        min-height: 100px;
        width: 480px;
    }
    p {
        margin: 0;
    }
}

.upsell-wrapper {
    background: $salt-flat-white;
    border-top: 1px solid $cloud-gray;
}

.upsell {
    background: #fff;
    border-radius: 5px;
    border: 1px solid $cloud-gray;
    display: block;
    font-size: 0;
    margin: 10px;
    padding: 15px 10px;
    text-decoration: none;
    &:hover {
        border-color: darken($seavan-salt-white, 10%);
        img {
            opacity: .8;
        }
    }
    &:active {
        depressed();
    }
    div {
        display: inline-block;
        padding: 8px 10px;
        vertical-align: top;
    }
    img {
        height: 64px;
        width: 64px;
    }
    .avail {
        color: #000;
        display: block;
        font-size: 15px;
        line-height: 17px;
    }
    .name {
        color: $earl-gray;
        font-size: 12px;
        line-height: 18px;
    }
}

// ***************** Wide Mobile (> 671px)

@media $at-least-desktop {
    .upsell-wrapper {
        background: #fff;
    }
    .upsell,
    .blurbs > div {
        padding: 24px 15px;
    }
    .upsell {
        border: 0;
        border-radius: 0;
        margin: 0;
        div {
            padding: 8px 15px;
        }
        .avail {
            font-size: 17px;
            line-height: 19px;
        }
        .name {
            font-size: 15px;
            line-height: 21px;
        }
    }
    .blurbs .description-wrapper {
        text-columns(2, 24px);

        p.description {
            padding-top: 0;
        }
        &.truncated {
            max-height: none;
            overflow: visible;

            &:after {
                content: none;
            }
        }
    }
    .show-toggle {
        display: none;
    }

    .detail {
        border-radius: 10px;
        margin: 0 auto;
        max-width: $desktop-content;
        overflow: hidden;
        h3 {
            font-weight: 500;
        }
    }

    // At desktop width, let's float the content ratings.
    .content-ratings {
        margin: 0 -15px;

        .content-rating {
            float: left;
            margin-bottom: 24px;
            padding: 0 15px;
            width: 50%;
        }
    }

    .secondary-header .leading {
        font-size: 24px;
        gradient-two-color(#fff, #e1e1e1);
        line-height: 24px;
        max-width: 100%;
        padding: 15px;
        position: static;
    }
}


// Statistics page is not mobile-optimized. Hide button to that page at non-
// desktop widths.
@media $narrower-than-desktop {
    .statistics {
        display: none;
    }
}
